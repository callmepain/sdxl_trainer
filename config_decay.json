{
  "device": "cuda",
  "run": {
    "name": "new_beginning_v_0_0_8",
    "output_root": ".output",
    "checkpoint_root": ".output/safetensors"
  },
  "model": {
    "id": "PainCraft_XL_Reforged_v1_diffusers",
    "use_ema": true,
    "ema_decay": 0.9999,
    "use_bf16": true,
    "use_gradient_checkpointing": true,
    "train_text_encoder_1": true,
    "train_text_encoder_2": false,
    "use_torch_compile": false,
    "torch_compile_kwargs": { "mode": "reduce-overhead" }
  },
  "training": {
    "output_dir": null,
    "batch_size": 4,
    "num_steps": 1500,
    "num_epochs": null,
    "lr_unet": 2e-06,
    "lr_text_encoder_1": 3e-06,
    "lr_text_encoder_2": 3e-06,
    "log_every": null,
    "checkpoint_every": null,
    "grad_accum_steps": 3,
    "noise_offset": 0.01,
    "min_sigma": null,
    "min_sigma_warmup_steps": 0,
    "prediction_type": "v_prediction",
    "snr_gamma": 0.15,
    "max_grad_norm": 0.5,
    "max_grad_norm_te_multiplier": 10.0,
    "detect_anomaly": true,
    "lr_warmup_steps": 0,
    "ema_update_every": 10,
    "resume_from": null,
    "resume_state_path": null,
    "state_path": null,
    "seed": 26111985,
    "lr_scheduler": {
      "type": "cosine_decay",
      "warmup_steps": 200,
      "min_factor": 0.3
    },
    "tensorboard": {
      "enabled": true,
      "log_dir": null,
      "base_dir": "./logs/tensorboard",
      "log_grad_norm": true,
      "log_scaler": true
    }
  },
  "data": {
    "image_dir": "./data/images",
    "size": 1024,
    "shuffle": true,
    "num_workers": 4,
    "pin_memory": true,
    "caption_dropout_prob": 0.15,
    "caption_shuffle_prob": 0.15,
    "caption_shuffle_separator": ",",
    "caption_shuffle_min_tokens": 2,
    "bucket": {
      "enabled": true,
      "resolutions": [[1024,1024],[832,1216],[1216,832]],
      "divisible_by": 64,
      "batch_size": 4,
      "drop_last": true,
      "per_resolution_batch_sizes": {
        "832x1216": 4,
        "1216x832": 4,
        "1024x1024": 4
      },
      "log_switches": false
    },
    "latent_cache": {
      "enabled": true,
      "cache_dir": "./cache/latents",
      "dtype": "auto",
      "build_batch_size": 12
    }
  },
  "optimizer": {
    "weight_decay": 0.01,
    "betas": [
      0.9,
      0.999
    ],
    "eps": 1e-08
  },
  "export": {
    "save_single_file": true,
    "checkpoint_path": null,
    "converter_script": "./converttosdxl.py",
    "half_precision": true,
    "use_safetensors": true,
    "extra_args": []
  },
  "eval": {
    "backend": "kdiffusion",
    "sampler_name": "sample_dpmpp_2m_sde",
    "scheduler": "beta",
    "num_inference_steps": 35,
    "cfg_scale": 6.5,
    "prompts_path": "./data/eval_prompts.json",
    "height": 1216,
    "width": 832,
    "use_ema": true,
    "live": {
      "enabled": true,
      "every_n_steps": 100,
      "max_batches": null
    },
    "final": {
      "enabled": true,
      "max_batches": null
    }
  }
}
